# AgentZeroCommunicationConfig.cmake - CMake configuration for Agent-Zero Communication
# Part of AZ-HUMAN-001: Create HumanInterface layer

set(AGENTZERO_COMMUNICATION_VERSION "@PROJECT_VERSION@")

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(PkgConfig REQUIRED)

# Find OpenCog dependencies
pkg_check_modules(COGUTIL REQUIRED cogutil)
pkg_check_modules(ATOMSPACE REQUIRED atomspace)

# Optional dependencies
pkg_check_modules(COGSERVER cogserver)
pkg_check_modules(LG_ATOMESE lg-atomese)

# Import targets
include("${CMAKE_CURRENT_LIST_DIR}/AgentZeroCommunicationTargets.cmake")

# Provide variables for backward compatibility
set(AGENTZERO_COMMUNICATION_LIBRARIES AgentZero::agentzero-communication)
set(AGENTZERO_COMMUNICATION_INCLUDE_DIRS "${_IMPORT_PREFIX}/include")

check_required_components(AgentZeroCommunication)